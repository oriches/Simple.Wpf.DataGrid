<rd:SharedResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                             xmlns:rd="clr-namespace:Simple.Wpf.DataGrid.Views.ResourceDictionaries">

    <rd:SharedResourceDictionary.MergedDictionaries>
        <rd:SharedResourceDictionary Source="../Colors/Colors.xaml" />
    </rd:SharedResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="NumberBrush"
                     Color="Black"
                     po:Freeze="True" />

    <SolidColorBrush x:Key="DefaultNumberBackgroundBrush"
                     Color="{StaticResource DefaultBackgroundColor}"
                     po:Freeze="True" />

    <SolidColorBrush x:Key="TextBrush"
                     Color="Black"
                     po:Freeze="True" />

    <SolidColorBrush x:Key="DateBrush"
                     Color="DarkBlue"
                     po:Freeze="True" />

    <SolidColorBrush x:Key="DefaultBackgroundBrush"
                     Color="{StaticResource DefaultBackgroundColor}"
                     po:Freeze="True" />

</rd:SharedResourceDictionary>